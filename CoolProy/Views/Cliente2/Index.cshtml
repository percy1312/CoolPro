   <div class="row">
            <div class="span2">
         
        <a href="@Url.Action("Create", "Cliente2")"  class = "btn btn-primary"><i class="glyphicon glyphicon-plus"></i>&nbsp;Crear Cliente</a>
        </div> 
                  <div class="clearfix">&nbsp;</div>
